{
  "name": "inc_webapp",
  "version": "0.0.1",
  "description": "LUTE's web-based performance tool for Terry Riley's \"In C\"",
  "main": "js/main.jsx",
  "scripts": {
    "clean": "rm -rf dist",
    "make-dist": "mkdir -p dist && cp index.html dist/ && cp terry_signature.svg dist/",
    "build-js": "browserify -e js/main.jsx -o dist/bundle.js -t [ babelify ]",
    "build-sass": "node-sass --output-style='compressed' styles/main.scss dist/styles.css",
    "opt-svgs": "svgo --disable=inlineStyles -f dist/assets/svgs",
    "build-ly": "sh build-ly.sh",
    "build": "npm run clean & npm run make-dist && npm run build-js && npm run build-sass && npm run build-ly",
    "watch-js": "watchify -v --debug js/main.jsx -o dist/bundle.js -t [ babelify ]",
    "watch-sass": "node-sass --watch --source-map-embed 'styles/main.scss' './dist/styles.css'",
    "watch-html": "cpx '*.{html,svg}' dist --verbose --clean --watch",
    "watch-ly": "node lyWatcher",
    "watch": "npm run clean & npm run watch-js & npm run build-sass & npm run watch-sass & npm run watch-html & npm run watch-ly",
    "serve": "npm run watch & http-server dist",
    "deploy": "npm run build && gh-pages -d dist -o upstream",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loyola-university-tech-ensemble/in-c.git"
  },
  "keywords": [
    "Terry Riley",
    "In C",
    "web audio",
    "laptop ensemble",
    "laptop orchestra",
    "technology ensemble"
  ],
  "author": "Loyola University Technology Ensemble",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/loyola-university-tech-ensemble/in-c/issues"
  },
  "homepage": "https://github.com/loyola-university-tech-ensemble/in-c#readme",
  "dependencies": {
    "feather-icons": "^4.5.0",
    "hyperapp": "^1.2.9",
    "tone": "^0.11.11",
    "webworkify": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-react-jsx": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babelify": "^9.0.0",
    "browserify": "^14.5.0",
    "cpx": "^1.5.0",
    "debounce": "^1.1.0",
    "gh-pages": "^1.2.0",
    "http-server": "^0.11.1",
    "node-sass": "^4.9.2",
    "svgo": "^1.0.5",
    "watchify": "^3.11.0"
  }
}
